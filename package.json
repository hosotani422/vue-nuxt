{
  "name": "vue-nuxt",
  "private": true,
  "type": "module",
  "engines": {
    "npm": "The only package manager is pnpm",
    "yarn": "The only package manager is pnpm",
    "pnpm": ">=10.20.0"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "uiux": "storybook dev -p 6006 -c uiux",
    "build:uiux": "storybook build -c uiux -o .storybook",
    "run:uiux": "http-server .storybook --port 6006",
    "check:uiux": "test-storybook --config-dir uiux --ci --maxWorkers=2",
    "lint:format": "prettier --check --config prettier.config.js .",
    "lint:style": "stylelint --config stylelint.config.mjs **/*.css",
    "lint:script": "eslint --config eslint.config.js",
    "fix:format": "prettier --write --config prettier.config.js .",
    "fix:style": "stylelint --fix --config stylelint.config.mjs **/*.css",
    "fix:script": "eslint --fix --config eslint.config.js",
    "test:uiux": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm uiux\" \"wait-on tcp:6006 && pnpm check:uiux\"",
    "test:unit": "vitest --config unit/vitest.config.ts",
    "test:coverage": "vitest --run --coverage --config unit/vitest.config.ts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "prepare": "husky install && playwright install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@pinia/nuxt": "^0.11.3",
    "@playwright/test": "^1.56.1",
    "@storybook/test-runner": "^0.24.1",
    "@storybook/vue3-vite": "^10.0.6",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.10.0",
    "@vite-pwa/nuxt": "^1.0.7",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "happy-dom": "^20.0.10",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "i18next": "^25.6.1",
    "lodash": "^4.17.21",
    "nuxt": "^4.2.1",
    "pinia": "^3.0.4",
    "prettier": "^3.6.2",
    "storybook": "^10.0.6",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1",
    "zod": "^4.1.12"
  }
}
