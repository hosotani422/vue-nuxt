{
  "name": "nuxt3",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "ui": "storybook dev -p 6006 -c test/storybook",
    "build:ui": "storybook build -c test/storybook -o .storybook",
    "lint:format": "prettier --check --config prettier.config.js .",
    "lint:style": "stylelint --config stylelint.config.mjs **/*.css",
    "lint:script": "eslint --config .eslintrc.cjs **/*.{js,jsx,ts,tsx,vue}",
    "fix:format": "prettier --write --config prettier.config.js .",
    "fix:style": "stylelint --fix --config stylelint.config.mjs **/*.css",
    "fix:script": "eslint --fix --config .eslintrc.cjs **/*.{js,jsx,ts,tsx,vue}",
    "test:ui": "test-storybook --config-dir test/storybook",
    "test:ui.ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm run ui\" \"wait-on tcp:6006 && pnpm run test:ui\"",
    "test:ut": "vitest --config test/vitest/vitest.config.ts",
    "test:it": "playwright test --config test/playwright/playwright.config.ts",
    "test:it.testcafe": "testcafe --config-file test/testcafe/.testcaferc.cjs",
    "test:it.cypress": "cypress run --browser firefox --config-file test/cypress/cypress.config.ts",
    "prepare": "husky install && playwright install"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@pinia/nuxt": "^0.5.1",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-essentials": "^7.6.3",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/vue3-vite": "^7.6.3",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.3",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vitest/coverage-v8": "^1.0.1",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.1",
    "dayjs": "^1.11.10",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "flush-promises": "^1.0.2",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "lodash": "^4.17.21",
    "nuxt": "^3.8.2",
    "pinia": "^2.1.7",
    "postcss": "^8.4.32",
    "postcss-syntax": "^0.36.2",
    "prettier": "^3.1.0",
    "storybook": "^7.6.3",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^13.0.0",
    "tailwindcss": "^3.3.6",
    "testcafe": "^3.4.0",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vitest": "^1.0.1"
  }
}
