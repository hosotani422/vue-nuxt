{
  "name": "vue-nuxt",
  "private": true,
  "type": "module",
  "engines": {
    "npm": "The only package manager is pnpm",
    "yarn": "The only package manager is pnpm",
    "pnpm": ">=10.12.4"
  },
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "uiux": "tailwindcss -i ./app/style/index.css -o ./.nuxt/tailwind.css | storybook dev -p 6006 -c uiux",
    "build:uiux": "tailwindcss -i ./app/style/index.css -o ./.nuxt/tailwind.css | storybook build -c uiux -o .storybook",
    "run:uiux": "http-server .storybook --port 6006",
    "check:uiux": "test-storybook --config-dir uiux --ci --maxWorkers=2",
    "lint:format": "prettier --check --config prettier.config.js .",
    "lint:style": "stylelint --config stylelint.config.mjs **/*.css",
    "lint:script": "eslint --config eslint.config.js",
    "fix:format": "prettier --write --config prettier.config.js .",
    "fix:style": "stylelint --fix --config stylelint.config.mjs **/*.css",
    "fix:script": "eslint --fix --config eslint.config.js",
    "test:uiux": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm uiux\" \"wait-on tcp:6006 && pnpm check:uiux\"",
    "test:unit": "vitest --config unit/vitest.config.ts",
    "test:coverage": "vitest --run --coverage --config unit/vitest.config.ts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "prepare": "husky install && playwright install"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@pinia/nuxt": "^0.11.1",
    "@playwright/test": "^1.51.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/test-runner": "^0.23.0",
    "@storybook/vue3-vite": "^8.6.14",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.10",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.0",
    "date-fns": "^4.1.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.3.0",
    "happy-dom": "^18.0.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "i18next": "^25.3.1",
    "lodash": "^4.17.21",
    "nuxt": "^3.17.6",
    "pinia": "^3.0.3",
    "prettier": "^3.6.2",
    "storybook": "^8.6.14",
    "stylelint": "^16.21.1",
    "stylelint-config-recommended": "^16.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.8.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3",
    "zod": "^3.25.74"
  }
}
